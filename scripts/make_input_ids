#!/usr/local/bin/perl

use Bio::EnsEMBL::Pipeline::Analysis;
use Bio::EnsEMBL::Pipeline::DBSQL::DBAdaptor;
use Bio::EnsEMBL::Pipeline::Utils::InputIDFactory;
use Bio::EnsEMBL::Pipeline::DBSQL::StateInfoContainer;

use strict;
use Getopt::Long;

my $host;
my $user = 'ensadmin';
my $pass = 'ensembl';
my $port = 3306;
my $dbname;
my $logic_name;
my $slice_size;
my $type;
my $contig;
my $slice;
my $input_type;
my $single;

&GetOptions(
            'host:s'       => \$host,
            'port:n'       => \$port,
            'user:s'       => \$user,
            'pass:s'       => \$pass,
            'dbname:s'     => \$dbname,
	    'contig'       => \$contig,
	    'slice'        => \$slice,
            'slice_size:s' => \$slice_size,
            'logic_name:s' => \$logic_name,
            'input_type:s' => \$input_type,
	    'single' => \$single,
           );


my $db = new Bio::EnsEMBL::Pipeline::DBSQL::DBAdaptor(-host   => $host,
                                                      -user   => $user,
                                                      -pass   => $pass,
                                                      -port   => $port,
                                                      -dbname => $dbname);
if ($type) {
    $db->assembly_type($type);
} else {
    $type = $db->assembly_type;
}
if (!defined($type)) {
    die "No assemby type defined";
}

if (!($contig) && !($slice) && !($single)) {
  die "Must define input as either contig, slice or single";
}

my $inputIDFactory = new Bio::EnsEMBL::Pipeline::Utils::InputIDFactory(-db => $db);

my $analysis = $db->get_AnalysisAdaptor->fetch_by_logic_name($logic_name);

if (!($analysis)) {
    $analysis = new Bio::EnsEMBL::Pipeline::Analysis(-logic_name    => $logic_name,
                                                     -input_id_type => $input_type);

    print "Adaptor " . $db->get_AnalysisAdaptor . "\n";
 
    $db->get_AnalysisAdaptor->store($analysis);
}

if ($slice && $contig) {
    die "Can't generate contig and slice input ids at the same time. Must be done separately";
}

my @ids;

if ($slice) {
 
  $input_type = "SLICE" unless $input_type;
  
  @ids = $inputIDFactory->generate_slice_input_ids($slice_size);
  
}elsif($contig) {

  $input_type = "CONTIG" unless $input_type;
  @ids = $inputIDFactory->generate_contig_input_ids;
  
}elsif($single){
  @ids = ('genome');
}
print "input id type $input_type\n";

$analysis->input_id_type($input_type); 

foreach my $id (@ids) {
    eval {
      print STDERR "Storing input id $id - type " . $analysis->input_id_type . "\n";

      $db->get_StateInfoContainer->store_input_id_analysis($id,$analysis);  
    };
    if ($@) {
      print "Input id $id already present\n";
    }
}
