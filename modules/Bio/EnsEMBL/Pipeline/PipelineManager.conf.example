[DEFAULT_DATABASE]
host=127.0.0.1
user=ensadmin
pass=ensembl
port=5000

#
# Database where pipeline config is stored
# as well as jobs & job_status
#
[PIPELINE_DATABASE]
dbname = mcvicker_test_briggsae
host=127.0.0.1
user=ensadmin
pass=ensembl
port=5000

[ENSEMBL_DATABASE]
dbname = mcvicker_test_briggsae

[DNA_DATABASE]
dbname = mcvicker_test_briggsae

[LSF]
tempdir = /nfs/acari/tmp
path = /usr/local/lsfv42/4.2/alpha5/bin/


[PIPELINE_MANAGER]
check_interval = 35

#
# This is a list of tasks to be run by the pipeline manager
#
[TASKS]
repeatmasker_task = Bio::EnsEMBL::Pipeline::Task::RDB::RepeatMasker

#
# configuration for tasks follows
#
[DEFAULT_TASK]
ensdb = ensembl_database
dnadb = dna_database
where = LSF:acari:
batchsize = 500
#timeout in seconds 86400 = 24hours
timeout = 86400
retries = 3	

[REPEATMASKER_TASK]
timeout  = 3600
where = Local


[GENSCAN_TASK]
timeout = 3600

[TRIBE_MCL_TASK]
where = LSF:aristotle:
batchsize = 1
