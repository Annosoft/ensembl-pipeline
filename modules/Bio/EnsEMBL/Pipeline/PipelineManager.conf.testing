[DEFAULT_DATABASE]
host=ecs1g
user=ensadmin
pass=ensembl
port=3306

#
# Database where pipeline config is stored
# as well as jobs & job_status
#
[PIPELINE_DATABASE]
dbname = briggsae_test_sequence
host=ecs1g
user=ensadmin
pass=ensembl
port=3306

[ENSEMBL_DATABASE]
dbname = briggsae_test_sequence

[DNA_DATABASE]
dbname = briggsae_test_sequence

[LSF]
tempdir = /nfs/acari/tmp
path = /usr/local/lsfv42/4.2/alpha5/bin/


[PIPELINE_MANAGER]
check_interval = 120

#
# This is a list of tasks to be run by the pipeline manager
#
[TASKS]
repeatmasker_task = Bio::EnsEMBL::Pipeline::Task::RDB::RepeatMasker

#
# configuration for tasks follows
#
[DEFAULT_TASK]
ensdb = ensembl_database
dnadb = dna_database
where = LSF:acari:
batchsize = 500
#timeout in seconds 86400 = 24hours
timeout = 86400
	

[REPEATMASKER_TASK]
timeout  = 3600
where = Local


[GENSCAN_TASK]
timeout = 3600

[TRIBE_MCL_TASK]
where = LSF:aristotle:
batchsize = 1
